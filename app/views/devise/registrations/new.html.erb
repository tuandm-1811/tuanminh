

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="form_row">
      <div class="card ">
        <h1 class="card-header text-center">Sign up</h1>
        <div class="form-group">
          <div class="form-row" id="validationDefaultUsername" required>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true,class:"form-control", placeholder: 'Enter your Email' %>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row" id="validationDefaultUsername" required>
            <%= f.label :password %>
            <%= f.password_field :password,  class:"form-control",placeholder: 'Enter your password' %>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row" id="validationDefaultUsername" required>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation ,class:"form-control",placeholder: 'Re-enter your password'%>
          </div>
        <div>
              <div class="actions">
                <%= f.submit "Sign up",class: "btn btn-primary center-block"  %>
              </div>
            <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</form>
<% end %>






